<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.simple.dao.SmsDao">

    <!-- 获取短信信息 -->
    <select id="getSmsSendRecordByMobilephone" parameterType="string" resultType="SmsSendRecordDO">
        select * from sim_sms_send_record where mobilephone = #{mobilephone}
    </select>
    
    <!-- 获取短信信息 -->
    <select id="getSmsSendStatByMobilephone" parameterType="string" resultType="SmsSendStatDO">
        select * from sim_sms_send_stat where mobilephone = #{mobilephone}
    </select>
    
    <!-- 短信列表查询 -->
    <select id="listSmsSendRecords" parameterType="string" resultType="SmsSendRecordDO">
        select id_sms_send_record,
               mobilephone,
               sms_content,
               request_ip
          from sim_sms_send_record
    </select>
    
    <!-- 短信列表查询 -->
    <select id="listSmsSendStats" parameterType="string" resultType="SmsSendStatDO">
        select id_sms_send_stat,
               mobilephone,
               send_count
          from sim_sms_send_stat
    </select>
    
    <!-- 保存短信信息 -->
    <insert id="saveSmsSendRecord" parameterType="SmsSendRecordDO">
        <selectKey keyProperty="idSmsSendRecord" resultType="string" order="BEFORE">
           select replace(uuid(),'-','')
		</selectKey>
        insert into sim_sms_send_record
          (id_sms_send_record,
           mobilephone,
           sms_content,
           request_ip,
           created_by,
           created_date,
           updated_by,
           updated_date)
        values
          (#{idSmsSendRecord},
           #{mobilephone},
           #{smsContent},
           #{requestIp},
           #{createdBy},
           #{createdDate},
           #{updatedBy},
           #{updatedDate})
    </insert>
    
    <!-- 保存短信信息 -->
    <insert id="saveSmsSendStat" parameterType="SmsSendStatDO">
    	<selectKey keyProperty="idSmsSendStat" resultType="string" order="BEFORE">
           select replace(uuid(),'-','')
		</selectKey>
        insert into sim_sms_send_stat
          (id_sms_send_stat,
           mobilephone,
           send_count,
           created_by,
           created_date,
           updated_by,
           updated_date)
        values
          (#{idSmsSendStat},
           #{mobilephone},
           #{sendCount},
           #{createdBy},
           #{createdDate},
           #{updatedBy},
           #{updatedDate})
    </insert>
    
    <!-- 短信发送量加1 -->
    <update id="addOneForSmsSendStat" parameterType="string">
    	update sim_sms_send_stat 
    		set send_count = send_count + 1
    	  where mobilephone = #{mobilephone}
    </update>
    
    <!-- 删除短信信息 -->
    <delete id="deleteSmsSendRecord" parameterType="string">
        delete from sim_sms_send_record where id_sms_send_record = #{idSmsSendRecord}
    </delete>
    
    <!-- 删除短信信息 -->
    <delete id="deleteSmsSendStat" parameterType="string">
        delete from sim_sms_send_stat where id_sms_send_stat = #{idSmsSendStat}
    </delete>
    
    <!-- 批量删除短信信息 -->
    <delete id="batchDeleteSmsSendRecords" parameterType="list">
        delete from sim_sms_send_record where id_sms_send_record in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">  
            #{item}  
        </foreach> 
    </delete>
    
    <!-- 批量删除短信信息 -->
    <delete id="batchDeleteSmsSendStats" parameterType="list">
        delete from sim_sms_send_stat where id_sms_send_stat in
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">  
            #{item}  
        </foreach> 
    </delete>
    
</mapper>